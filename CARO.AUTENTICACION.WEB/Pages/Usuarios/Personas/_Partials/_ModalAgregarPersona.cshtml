<div class="modal fade" id="modalAddPersona" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-simple modal-edit-user">
        <div class="modal-content p-3 p-md-5">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-4">
                    <h3>Agregar Persona</h3>
                </div>
                <form id="AddPersona" class="row g-3" method="post">
                    <div class="col-12">
                        <div action="/upload" class="dropzone needsclick
                            d-flex justify-content-center align-items-center" id="dropzone-area">
                            <div class="dz-message needsclick">
                                Arrastra el archivo o haz clic para subir la plantilla
                                <span class="note needsclick">
                                    (Esta es sólo una visualización
                                    <span class="fw-medium">del</span> archivo.)
                                </span>
                            </div>
                            <div class="fallback">
                                <input name="file" name="ARCHVO" type="file" accept="image/*" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="NOMBRS">P. Nombre <span class="text-danger">*</span></label>
                        <input type="text" id="NOMBRS" name="NOMBRS" class="form-control max-length" data-maxlength="100" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="SNOMBRS">S. Nombre </label>
                        <input type="text" id="SNOMBRS" name="SNOMBRS" class="form-control max-length" data-maxlength="100" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="APLLDS">P. Apellido <span class="text-danger">*</span></label>
                        <input type="text" id="APLLDS" name="APLLDS" class="form-control max-length" data-maxlength="100" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="SAPLLDS">S. Apellido</label>
                        <input type="text" id="SAPLLDS" name="SAPLLDS" class="form-control max-length" data-maxlength="100" />
                    </div>
        
                    <div class="col-12 col-md-4">
                        <label class="form-label" for="DCUMNTO">Nro. Documento <span class="text-danger">*</span></label>
                        <input type="text" id="DCUMNTO" name="DCUMNTO" class="form-control max-length sin-espacios" data-maxlength="13" />
                    </div>
        
                    <div class="col-12 col-md-4">
                        <label class="form-label" for="CORREO">Correo <span class="text-danger">*</span></label>
                        <input type="text" id="CORREO" name="CORREO" class="form-control max-length sin-espacios" data-maxlength="100" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="PASSWORD">Contraseña <span class="text-danger">*</span></label>
                        <input type="password" id="PASSWORD" name="PASSWORD" class="form-control max-length sin-espacios" data-maxlength="100" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="IDMRCA">Empresa <span class="text-danger">*</span></label>
                        <select id="IDMRCA" name="IDMRCA" class="select2 form-select" data-allow-clear="true">
                        </select>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="IDROL">Rol <span class="text-danger">*</span></label>
                        <select id="IDROL" name="IDROL" class="select2 form-select" data-allow-clear="true">
                        </select>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="ANEXO">Anexo</label>
                        <input type="text" id="ANEXO" name="ANEXO" class="form-control max-length" data-maxlength="30" />
                    </div>

                    <div class="col-12 col-md-4 d-flex flex-row align-items-center gap-3 ">
                        <label class="form-label" for="PRMSO">Usuario Activo?  </label>
                        <label class="switch switch-square">
                            <input type="checkbox" class="switch-input" id="PRMSO" name="PRMSO">
                            <span class="switch-toggle-slider">
                                <span class="switch-on"></span>
                                <span class="switch-off"></span>
                            </span>
                        </label>
                    </div>

                    <div class="col-12 text-center mt-4">
                        <button id="btnAddPersona" class="btn btn-primary me-sm-3 me-1">Agregar</button>
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                    </div>

                    @await Html.PartialAsync("../../../_Partials/_Auditoria.cshtml")
                     
                </form>
            </div>
        </div>
    </div>
</div>
