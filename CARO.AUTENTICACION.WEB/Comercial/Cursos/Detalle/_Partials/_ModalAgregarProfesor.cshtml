<div class="modal fade" id="modalAddProfesor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-simple modal-edit-user">
        <div class="modal-content p-3 p-md-5">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-4">
                    <h3>Agregar Profesor</h3>
                </div>
                <form id="AddProfesor" class="row g-3" method="post">
                    <div class="col-12">
                        <label class="form-label">Imagen Profesor</label>
                        <div action="/upload" class="dropzone needsclick
                            d-flex justify-content-center align-items-center" id="dropzone-area">
                            <div class="dz-message needsclick">
                                Arrastra el archivo o haz clic para subir la plantilla
                                <span class="note needsclick">
                                    (Esta es sólo una visualización
                                    <span class="fw-medium">del</span> archivo.)
                                </span> 
                            </div>
                            <div class="fallback">
                                <input name="file" name="ARCHVO" type="file" accept="image/*" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="NMBRS">Nombres Ref. <span class="text-danger">*</span></label>
                        <input type="text" id="NMBRS" name="NMBRS"  class="form-control max-length noMayus" data-maxlength="200" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label" for="CARGO">Cargo</label>
                        <input type="text" id="CARGO" name="CARGO"  class="form-control max-length noMayus" data-maxlength="200" />
                    </div>
                    
                    <div class="col-12 col-md-4">
                        <label class="form-label" for="UNVRSDD">Univ. Procedencia</label>
                        <input type="text" id="UNVRSDD" name="UNVRSDD" class="form-control max-length noMayus" data-maxlength="200" />
                    </div>

                    <div class="col-12">
                        <label class="form-label" for="RISIG">Ruta Instagram</label>
                        <input type="text" id="RISIG" name="RISIG" class="form-control max-length noMayus" data-maxlength="500" />
                    </div>

                    <div class="col-12">
                        <label class="form-label" for="RISFB">Ruta Facebook</label>
                        <input type="text" id="RISFB" name="RISFB" class="form-control max-length noMayus" data-maxlength="500" />
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label" for="RISLK">Ruta Linkedin</label>
                        <input type="text" id="RISLK" name="RISLK" class="form-control max-length noMayus" data-maxlength="500" />
                    </div>

                    <div class="col-12">
                        <label class="form-label" for="RTIK">Ruta Tik Tok</label>
                        <input type="text" id="RTIK" name="RTIK" class="form-control max-length noMayus" data-maxlength="500" />
                    </div>
                    
                    <div class="col-12 text-center mt-4">
                        <button id="btnAddProfesor" class="btn btn-primary me-sm-3 me-1">Agregar</button>
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                    </div>

                    @await Html.PartialAsync("../../../../_Partials/_Auditoria.cshtml")
                     
                </form>
            </div>
        </div>
    </div>
</div>
