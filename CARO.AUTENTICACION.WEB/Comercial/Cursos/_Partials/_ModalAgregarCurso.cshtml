<div class="modal fade" id="modalAddCurso" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-simple modal-edit-user">
        <div class="modal-content p-3 p-md-5">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-4">
                    <h3>Agregar Curso / Evento</h3>
                </div> 
                <form id="AddCurso" class="row g-3" method="post">
                    <div class="col-12">
                        <label class="form-label" for="DSCRPCN">Descripción <span class="text-danger">*</span></label>
                        <input type="text" id="DSCRPCN" name="DSCRPCN" class="form-control max-length noMayus" data-maxlength="200" />
                    </div>

                    <div class="col-12">
                        <label class="form-label" for="DTLLE">Detalle</label>
                        <textarea id="DTLLE" name="DTLLE" class="form-control max-length noMayus" data-maxlength="2000"></textarea>
                    </div>

                    
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="FINI">Fcha. Inicio <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="text" id="FINI" name="FINI" placeholder="DD-MM-YYYY" class="form-control date-mask dob-picker-format" />
                            <span class="input-group-text">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                    </div>

                    
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="FFIN">Fcha. Fin <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="text" id="FFIN" name="FFIN" placeholder="DD-MM-YYYY" class="form-control date-mask dob-picker-format" />
                            <span class="input-group-text">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label" for="IDMRCA">Empresa <span class="text-danger">*</span></label>
                        <select id="IDMRCA" name="IDMRCA" class="form-select">
                        </select>
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label" for="GDCTGCRSO">Categoria Curso <span class="text-danger">*</span></label>
                        <select id="GDCTGCRSO" name="GDCTGCRSO" class="form-select">
                        </select>
                    </div>

                    <div class="col-12">
                        <div action="/upload" class="dropzone needsclick
                            d-flex justify-content-center align-items-center" id="dropzone-area">
                            <div class="dz-message needsclick">
                                Arrastra la imagen aquí o haz clic para subir.
                                <span class="note needsclick">(Esta es sólo una visualización
                                    <span class="fw-medium">de la</span> imagen.)</span>
                            </div>
                            <div class="fallback">
                                <input name="file" name="ARCHVO" type="file" accept="image/*" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-center mt-4">
                        <button id="btnAddCurso" class="btn btn-primary me-sm-3 me-1">Agregar</button>
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                    </div>

                    @await Html.PartialAsync("../../../_Partials/_Auditoria.cshtml")

                </form>
            </div>
        </div>
    </div>
</div>
